<Window x:Class="RomeClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RomeClock"
        xmlns:RomeClockControl="clr-namespace:RomeClockControlLibrary;assembly=RomeClockControlLibrary"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="450" Loaded="Window_Loaded" WindowStyle="None" Opacity="1" AllowsTransparency="True" Background="Transparent" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="277*"/>
            <ColumnDefinition Width="173*"/>
        </Grid.ColumnDefinitions>
        <RomeClockControl:RomeClockControl x:Name="clock" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
